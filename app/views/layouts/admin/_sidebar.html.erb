<aside class="main-sidebar sidebar-dark-primary elevation-4">
  <%= link_to "#", class: "brand-link" do %>
    <%= image_tag "/img/AdminLTELogo.png", class: "brand-image img-circle elevation-3", alt: "logo" %>
    <span class="brand-text font-weight-light"><%= t "dashboard.sidebar.title" %></span>
  <% end %>
  <div class="sidebar">
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
      <div class="image">
        <%= image_tag current_user.avatar_url, class: "img-circle elevation-2", alt: "User Image" %>
      </div>
      <div class="info">
        <%= link_to current_user.name, admin_user_path(current_user.id), class: "d-block" %>
      </div>
      <%= hidden_field(:current_user, :id) %>
    </div>
    <nav class="mt-2">
      <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
        <li class="nav-item">
          <%= link_to root_path, class: "nav-link" do %>
            <i class="nav-icon fas fa-home"></i>
            <p>
              <%= t "dashboard.sidebar.page" %>
            </p>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to admin_root_path, class: "nav-link" do %>
            <i class="nav-icon fab fa-instagram"></i>
            <p>
              <%= t "dashboard.sidebar.dashboard" %>
            </p>
          <% end %>
        </li>
        <li class="nav-item has-treeview">
          <%= link_to "#", class: "nav-link" do %>
            <i class="nav-icon fas fa-user"></i>
            <p>
              <%= t "dashboard.sidebar.user" %>
              <i class="right fas fa-angle-left"></i>
            </p>
          <% end %>
          <ul class="nav nav-treeview">
            <li class="nav-item">
              <%= link_to admin_user_path(session[:user_id]), class: "nav-link" do %>
                <i class="fas fa-address-card nav-icon"></i>
                <p><%= t "dashboard.sidebar.profile" %></p>
              <% end %>            </li>
            <li class="nav-item">
              <%= link_to admin_users_path, class: "nav-link" do %>
                <i class="fas fa-users nav-icon"></i>
                <p><%= t "dashboard.sidebar.list" %></p>
              <% end %>
            </li>
          </ul>
        </li>
        <li class="nav-item has-treeview">
          <%= link_to "#", class: "nav-link" do %>
            <i class="nav-icon fas fa-newspaper"></i>
            <p>
              <%= t "dashboard.sidebar.post" %>
              <i class="right fas fa-angle-left"></i>
            </p>
          <% end %>
          <ul class="nav nav-treeview">
            <li class="nav-item">
              <%= link_to admin_posts_path, class: "nav-link" do %>
                <i class="fas fa-list-ul nav-icon"></i>
                <p><%= t "dashboard.sidebar.list" %></p>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_admin_post_path, class: "nav-link" do %>
                <i class="fas fa-plus nav-icon"></i>
                <p><%= t "dashboard.sidebar.add" %></p>
              <% end %>
            </li>
          </ul>
        </li>
        <li class="nav-item has-treeview">
          <%= link_to "#", class: "nav-link" do %>
            <i class="nav-icon fas fa-book"></i>
            <p>
              <%= t "dashboard.sidebar.topic" %>
              <i class="right fas fa-angle-left"></i>
            </p>
          <% end %>
          <ul class="nav nav-treeview">
            <li class="nav-item">
              <%= link_to admin_topics_path, class: "nav-link" do %>
                <i class="fas fa-list-ul nav-icon"></i>
                <p><%= t "dashboard.sidebar.list" %></p>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_admin_topic_path, class: "nav-link" do %>
                <i class="fas fa-plus nav-icon"></i>
                <p><%= t "dashboard.sidebar.add" %></p>
              <% end %>
            </li>
          </ul>
        </li>
      </ul>
    </nav>
  </div>
</aside>
<aside class="control-sidebar control-sidebar-dark">
  <div class="p-3">
    <h5><%= t "dashboard.sidebar.title" %></h5>
    <p><%= t "dashboard.sidebar.sidebar_content" %></p>
  </div>
</aside>
