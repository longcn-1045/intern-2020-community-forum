<% provide :title, t(".users") %>
<% provide :controller, t(".users") %>
<% provide :action, t(".followings") %>

<div class="users-index">
  <div class="row">
    <% if @user.following.present? %>
      <%= render @user.following %>
    <% else %>
      <h5 class="ml-3"><% t ".no_followers" %></h5>
    <% end %>
  </div>
</div>
