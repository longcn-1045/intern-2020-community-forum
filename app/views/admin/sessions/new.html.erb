<div class="login-box">
  <div class="login-logo">
    <%= t "layouts.application.title" %>
  </div>
  <div class="card">
    <div class="card-body login-card-body">
      <p class="login-box-msg"><%= t "sessions.new.sign_in" %></p>
      <%= form_for resource, as: resource_name,
        url: session_path(resource_name) do |f| %>
        <div class="input-group mb-3">
          <%= f.email_field :email, class: "form-control", placeholder: t("sessions.new.email") %>
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          <%= f.password_field :password, class: "form-control", placeholder: t("sessions.new.password") %>
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-8">
            <div class="icheck-primary">
              <%= f.label t("sessions.new.remember_me"), class: "checkbox inline" do %>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, t(".sessions.new.remember_me") %>
              <% end %>
            </div>
          </div>
          <div class="col-4">
            <%= f.submit t("sessions.new.signin"), class: "btn btn-primary btn-block" %>
          </div>
        </div>
      <% end %>
      <div class="social-auth-links text-center mb-3">
        <%= link_to "#", class: "btn btn-block btn-primary" do %>
          <i class="fab fa-facebook mr-2"></i> <%= t "sessions.new.signin_fb" %>
        <% end %>
        <%= link_to "#", class: "btn btn-block btn-danger" do %>
          <i class="fab fa-google-plus mr-2"></i> <%= t "sessions.new.signin_gg" %>
        <% end %>
      </div>
      <p class="mb-1">
        <%= link_to t("sessions.new.forgot_password"), new_password_path(resource_name) %><br />
      </p>
      <p class="mb-0">
        <%= link_to new_user_registration_path, class: "text-center" do %>
          <%= t "sessions.new.register" %>
        <% end %>
      </p>
    </div>
  </div>
</div>
