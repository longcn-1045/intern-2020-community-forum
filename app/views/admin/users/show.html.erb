<div class="card card-primary">
  <div class="card-header">
    <h3 class="card-title"><%= t "users.form.title" %></h3>
  </div>
    <div class="card-body">
      <%= form_for @user, url: admin_user_path(@user.id) do |f| %>
        <div class="form-group">
          <%= f.label t "users.show.avatar" %>
          <%= image_tag @user.avatar_url.to_s %>
        </div>
        <div class="form-group">
          <%= f.label t "users.show.name" %>
          <%= f.text_field :name, class: "form-control", readonly: true %>
        </div>
        <div class="form-group">
          <%= f.label t "users.show.email" %>
          <%= f.text_field :email, class: "form-control", readonly: true %>
        </div>
        <div class="form-group">
          <%= f.label t "users.show.role" %>
          <%= f.text_field :role, class: "form-control", readonly: true %>
        </div>
        <div class="form-group">
          <%= f.label t "users.show.status" %>
          <%= f.text_field :status, class: "form-control", readonly: true %>
        </div>
        <div class="form-group">
          <%= f.label t "users.show.created_at" %>
          <%= f.text_field :created_at, class: "form-control", readonly: true %>
        </div>
      <% end %>
    </div>
</div>
