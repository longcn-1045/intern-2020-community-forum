<div class="card">
  <div class="card-header">
    <h3 class="card-title"><%= t "users.index.title" %></h3>
  </div>
  <div class="card-body">
    <table id="example1" class="table table-bordered table-striped">
      <div class="input-group input-group-sm">
        <%= render "filter" %>
      </div>
      <div class="row">
        <div class="col-6">
          <label><%= t "users.index.user_numbers" %><%= t "users.index.count", count: @users.total_count %></label>
        </div>
        <div class="col-6">
          <label class="text-success"><%= link_to t("layouts.application.download"), admin_export_excel_path(format: :xlsx) %></label>
        </div>
      </div>
      <thead>
        <%= render "colums" %>
      </thead>
      <tbody>
        <%= render @users %>
      </tbody>
      <tfoot>
        <%= render "colums" %>
      </tfoot>
    </table>
  </div>
</div>
<%= paginate @users, theme: Settings.theme.name_bootstrap %>
