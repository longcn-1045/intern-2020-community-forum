<div class="card">
  <div class="card-header">
    <h3 class="card-title">DataTable with default features</h3>
  </div>
  <div class="card-body">
    <table id="example1" class="table table-bordered table-striped">
      <thead>
        <%= render "colums" %>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.role %></td>
            <td><%= user.status %></td>
            <td>
              <%= link_to edit_admin_user_path user.id, class: "nav-link active d-inline" do %>
                <i class="fas fa-edit nav-icon text-success"></i>
              <% end %>
              <% if !current_user?(user) %>
                <%= link_to admin_user_path(user.id), method: :delete,
                  data: { confirm: t("users.index.confirm_delete") },
                  class: "nav-link active d-inline" do %>
                  <i class="fas fa-trash-alt nav-icon text-danger"></i>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <%= render "colums" %>
      </tfoot>
    </table>
  </div>
</div>
<%= paginate @users, theme: Settings.theme.name_bootstrap %>
