<div class="card card-primary">
  <div class="card-header">
    <h3 class="card-title"><%= t "users.form.title" %></h3>
  </div>
  <%= form_for @user, url: admin_user_path(params[:id]), html: { multipart: true } do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <div class="card-body">
      <div class="row">
        <div class="col-lg-4">
          <div class="form-group">
            <p>
              <label><%= t "users.form.my_avatar" %></label>
              <%= image_tag(@user.avatar_url) if @user.avatar? %>
              <%= f.file_field :avatar %>
              <%= f.hidden_field :avatar_cache %>
            </p>
            <p>
              <label>
                <%= f.check_box :remove_avatar %>
                <%= t "users.form.remove" %>
              </label>
            </p>
          </div>
        </div>
        <div class="col-lg-8">
          <div class="form-group">
            <%= f.label t("users.form.name") %>
            <%= f.text_field :name, class: "form-control", placeholder: t("users.form.name"), required: true %>
          </div>
          <div class="form-group">
            <%= f.label t("users.form.email") %>
            <%= f.text_field :email, class: "form-control", placeholder: t("users.form.email"), required: true %>
          </div>
          <div class="form-group">
            <%= f.label t("users.form.password") %>
            <%= f.password_field :password, class: "form-control", placeholder: t("users.form.password") %>
          </div>
          <div class="form-group">
            <%= f.label t("users.form.password_confirmation") %>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: t("users.form.password_confirmation") %>
          </div>
          <div class="card-footer">
            <%= f.submit t("users.form.update"), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
