<div class="register-box">
  <div class="register-logo">
    <%= t "layouts.application.title" %>
  </div>
  <div class="card">
    <div class="card-body register-card-body">
      <p class="login-box-msg"><%= t "registers.index.title" %></p>
      <%= form_for resource, as: resource_name,
        url: password_path(resource_name) do |f| %>
        <div class="input-group mb-3">
          <%= f.email_field :email, class: "form-control", placeholder: t("registers.index.email") %>
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
        </div>
        <%= display_error f.object, :email %>
        <div>
          <%= f.submit t("password.infor.title"), class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
