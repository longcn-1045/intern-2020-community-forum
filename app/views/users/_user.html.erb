<div class="col-md-4">
  <div class="item">
    <div class="item-ava">
      <%= load_user_avatar user.url %>
    </div>
    <p class="item-name"><%= link_to user.name, user %></p>
    <span class="followers-count"><%= t ".followers_count",
      count: user.followers.count %></span>
    <div class="follow-user-<%= user.id %>" >
      <%= load_follow_user_partial user %>
    </div>
  </div>
</div>
