<% provide :title, t(".edit_user") %>
<% provide :controller, t(".users") %>
<% provide :action, t(".edit") %>
<% content_for :javascript_includes do %>
  <%= javascript_pack_tag "form_user", "data-turbolinks-track": "reload" %>
<% end %>

<h3><%= t ".edit_user" %></h3>

<%= form_for @user do |f| %>
  <div class="row">
    <div class="col-md-7">
      <div class="form-group">
        <%= f.label :name, t(".name"), class: "required" %>
        <%= f.text_field :name, class: "form-control" %>
        <%= display_error f.object, :name %>
      </div>

      <div class="form-group">
        <%= f.label :email, t(".email"), class: "required" %>
        <%= f.email_field :email, class: "form-control", readonly: true %>
        <%= display_error f.object, :email %>
      </div>

      <div class="form-group">
        <%= f.label :password, t(".password") %>
        <%= f.password_field :password, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, t(".password_confirmation") %>
        <%= f.password_field :password_confirmation, class: "form-control"  %>
      </div>
    </div>
    <div class="col-md-5">
      <div class="edit-user-avatar" id="user_ava_preview">
        <%= load_user_avatar @user.url %>
        <%= f.label :avatar, t(".upload_avatar"), class: "btn btn-light btn-block" %>
        <%= f.file_field :avatar, accept: Settings.user.image_type_accept %>
      </div>
    </div>
    <div class="col-md-12">
      <%= f.submit t(".edit_button"), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
