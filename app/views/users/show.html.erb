<% provide :title, t(".users") %>
<% provide :controller, t(".users") %>
<% provide :action, t(".show") %>

<div class="row" id="personal-page">
  <div class="col-md-9">
    <div class="user-info">
      <div class="user-ava">
        <%= load_user_avatar @user.url %>
      </div>
      <p class="user-name"><%= @user.name %></p>
    </div>
  </div>
  <div class="col-md-3 text-right">
    <% if current_user? @user %>
      <%= link_to edit_user_path, class: "edit-user-path" do %>
        <i class="fas fa-edit" aria-hidden="true">
          <%= t ".edit_user" %>
        </i>
      <% end %>
    <% end %>
  </div>
  <hr>
  <div class="col-md-6">
    <p class="static-infor">
      <i class="fas fa-book"></i>
      <span>
        <strong><%= @user.posts.size %></strong>
        <%= t ".posts" %>
      </span>
    </p>
  </div>
  <div class="col-md-6">
     <p class="static-infor">
      <i class="fas fa-book"></i>
      <span>
        <strong><%= @user.post_comments.size %></strong>
        <%= t ".comments" %>
      </span>
    </p>
  </div>
  <hr>
  <div class="col-md-6">
    <div class="relationship-infor">
      <p class="relationship-infor-title">
        <i class="fas fa-users"></i>
        <span>
          <strong>
            <%= link_to t(".followers"), "#" %>
          </strong>
        </span>
      </p>
      <p class="relationship-infor-content">
        <span><%= t ".dont_have" %></span>
      </p>
    </div>
  </div>
  <div class="col-md-6">
    <div class="relationship-infor">
      <p class="relationship-infor-title">
        <i class="fas fa-users"></i>
        <span>
          <strong>
            <%= link_to t(".followings"), "#" %>
          </strong>
        </span>
      </p>
      <p class="relationship-infor-content">
        <span><%= t ".dont_rela" %></span>
      </p>
    </div>
  </div>
  <hr>
  <div class="col-md-12">
    <%= render "shared/search_bar", path: user_path,
      select_type_label: t(".topics"), name_type: t(".title") %>
    <% if @posts.present? %>
      <div class="post-list">
        <%= render @posts if @posts.present? %>
      </div>
    <% else %>
      <h3 class="empty-data">
        <%= t ".no_post" %>
      </h3>
    <% end %>
  </div>
</div>
